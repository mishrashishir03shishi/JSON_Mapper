<body>
    <nav class="navbar navbar-dark bg-dark mb-1">
        <div class="container-fluid">
          <a class="navbar-brand" style="position: relative; left: 50%; margin-left: -50px;" href="#">JSON TOOLKIT</a>
        </div>
      </nav>

      <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4" style="color: antiquewhite;">JSON Mapping Toolkit</h1>
            
          </div>
      </div>
      <div class="container">
        <div class="row">
          <div class="d-flex justify-content-evenly">
              <button type="button" id="import" class="btn btn-outline-secondary">Import File</button>
              <form action="/input" method="post">
              <button type="submit" class="btn btn-outline-secondary">New Project</button>
            </form>
          </div>
        </div>
      </div>

      <div class="footer">
        <div class="container">
            <div class="row">
                <p>&#169; Oracle Banking Routing Hub</p>
            </div>
        </div>
      </div>

      <div class="modal fade" id="importModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Upload Your File Here</h5>
              
            </div>
            <div class="modal-body">
              <form action="/" enctype="multipart/form-data" method="post">
                
                <input type="file" name="file-to-upload" id="actual-btn" >
                <!-- <label for="actual-btn">Choose File</label> -->
                
                <input type="submit" value="Upload" >
                
                
              </form> 
            </div>            
          </div>
        </div>
    </div>

    
