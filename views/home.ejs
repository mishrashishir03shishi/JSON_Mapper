    <style>
        .jumbotron {
            background-image: url("/bg.jpg");
            background-size: cover;
            height: 250px;
        }
        .row{
            margin: 20px;
        }
        .footer {
        position: fixed;
        left: 0;
        bottom: 0;
        height: 100px;
        width: 100%;
        background-color:grey;
        color: white;
        
        }
        label{
          display: inline-block;
          background-color: indigo;
          color: white;
          padding: 0.5rem;
          font-family: sans-serif;
          border-radius: 0.3rem;
          cursor: pointer;
          margin-top: 1rem;
        }
        #upload{
          display: inline-block;
          background-color: grey;
          color: white;
          padding: 0.5rem;
          font-family: sans-serif;
          border-radius: 0.3rem;
          cursor: pointer;
          margin-top: 1rem;
        }
